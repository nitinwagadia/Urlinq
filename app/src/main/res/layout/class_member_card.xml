<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_member"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <ImageView
            android:id="@+id/classMemberImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_weight="0.15"
            android:src="@drawable/dolphin" />

        <TextView
            android:id="@+id/classMemberName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.70"
            android:gravity="center"
            android:text="Hey Hi there i am hereere" />

        <TextView
            android:id="@+id/classMemberFollow"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_weight="0.15"
            android:drawableStart="@drawable/invite" />
    </LinearLayout>
</android.support.v7.widget.CardView>