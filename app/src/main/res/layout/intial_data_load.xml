<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27312B" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:src="@drawable/applog" />

        <EditText
            android:id="@+id/UsernameEdit"
            android:layout_width="304dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/edittext"
            android:hint=".edu email address"
            android:paddingBottom="16dp"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            android:textColor="@color/SigninTextColor"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/PasswordEdit"
            android:layout_width="304dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/edittext"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingBottom="16dp"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            android:textColor="@color/SigninTextColor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/SignIn"
            android:layout_width="304dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="#03C794"
            android:onClick="ButtonClick"
            android:text="Sign in"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <View
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="or"
                android:textColor="@color/SigninTextColor"
                android:textSize="16dp" />

            <View
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext" />
        </LinearLayout>

        <Button
            android:id="@+id/facebook"
            android:layout_width="304dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="#3B5998"
            android:drawableStart="@drawable/fblogo"
            android:paddingTop="5dp"
            android:text="Facebook"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/createAccount"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="#3C3E40"
        android:text="Create Account"
        android:textColor="#FFFFFF" />

</RelativeLayout>